{
  "name": "greek-text-utils",
  "version": "1.0.1",
  "description": "A collection of greek text utils, including conversion to ISO 843/ELOT 743, Greeklish, Phonetic Latin, and Transliterated Latin",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "url": "git+https://github.com/mkarajohn/greek-text-utils.git"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rimraf ./dist && npm run build:esm & npm run build:cjs && tsconfig-to-dual-package",
    "build:esm": "rimraf ./dist/esm && tsc -p tsconfig.build.esm.json",
    "build:cjs": "rimraf ./dist/cjs && tsc -p tsconfig.build.cjs.json",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": [
    "greek",
    "text",
    "utils",
    "iso843",
    "elot743",
    "greeklish",
    "phonetic",
    "transliterated"
  ],
  "author": {
    "name": "Dimitris Karagiannis",
    "url": "https://stackoverflow.com/users/4651083/dimitris-karagiannis"
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "rimraf": "^5.0.1",
    "tsconfig-to-dual-package": "^1.2.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
